procedure Something;
var
  counter: Integer;
begin
  while (counter < 100) do
  begin
    Sleep(Random(50));
    Inc(counter);
  end;
end;

var
  Timer: TSimbaTimer;
  ms: Integer;
  str: String;
begin
  Timer.Start();
  Something();
  Timer.Stop();

  ms := Timer.Elapsed();
  str := Timer.ElapsedFmt('s');

  WriteLn('ms: ' + ToString(ms));
  WriteLN('seconds: ' + str);
end. 